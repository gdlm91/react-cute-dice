    "build:storybook": "build-storybook -o docs",
    "watch": "run-p watch:ts watch:storybook",
    "watch:ts": "tsc --watch",
    "watch:storybook": "start-storybook -p 6006",
    "prepublish": "yarn build",
    "lint": "eslint --fix '*/**/*.{ts,tsx}'",
